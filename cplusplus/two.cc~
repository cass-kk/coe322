#include <iostream>
using namespace std;
#include <string>
using std::string;

int main(){
  int i;
  cout << "Please enter an integer: "<<endl;
  cin>>i;
  if (i%2==0){
    cout << "even" << endl;
  }else{
    cout << "odd" <<endl;
  }





  string myname;
  cout<< "Please enter your name: "<<endl;
  cin>> myname;
  cout << "Hi, " << myname << endl;
  return 0;
}  
